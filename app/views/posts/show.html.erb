<div class="container">
  <p id="notice"><%= notice %></p>
    <h1 class="text-center"><%= @post.title %></h1>
    <p class="text-muted date-view"> <%= @post.created_at.to_date %></p>
    <p><%= @post.body %></p>
  
  <% if admin_signed_in? %>
  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %> | <% end %>
  <%= link_to 'Back', posts_path, class: 'btn btn-secondary' %>
</div>