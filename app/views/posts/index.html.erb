<% @posts.order(created_at: :desc).each do |post| %>
<div class="container">
  <div class="card text-white bg-secondary">
    
    <div class="row">
      <div class="col-md-3">
        <div class="card-header">
          <h2 class="card-title"><%= post.title %></h2>
          <%= link_to 'View', post, class: 'btn btn-info' %> <% if admin_signed_in? %>  <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %> <%=  link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %> <% end %>
        </div>
        <div class="card-footer">
          <small class="text-white">Posted date: <%= post.created_at.to_date %></small>
        </div>
      </div>
    
      <div class="col-md-9">
        <div class="card-body">
          <h6>Content:</h6><br />
          <p><%= post.body %></p>
        </div>
      </div>
    </div>

  </div>
</div>
<% end %>

<div class="container">
  <div class="card">
    <% if admin_signed_in? %>
    <div class="card-header">
      <h3 class="text-center">Admin Control Panel</h3>
    </div>
    <div class="card-body">
      <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
    </div>
    <% else %>
    <% end %>
  </div>
  </div>
</div>
